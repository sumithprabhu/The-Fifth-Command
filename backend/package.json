{
  "name": "the-fifth-command-backend",
  "version": "1.0.0",
  "description": "Node.js backend for The Fifth Command Ethereum-based auction game MVP",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc && NODE_ENV=production node dist/app.js",
